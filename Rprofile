# options
options(repos="http://cran.ma.imperial.ac.uk")
options(BioC_mirror="http://mirrors.ebi.ac.uk/bioconductor/")
#options(width=150)
options(stringsAsFactors=FALSE)

# libraries
library(setwidth)

# sources
source("http://bioconductor.org/biocLite.R")

.First <- function() {
	cat("\n   Welcome to R!\n\n")
}
.Last <- function() {
	cat("\n   Goodbye!\n\n")
}
